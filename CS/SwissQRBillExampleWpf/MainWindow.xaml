<Window x:Class="SwissQRBillExampleWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwissQRBillExampleWpf"
        xmlns:customControl ="clr-namespace:DevExpress.Xpf.UserDesigner.CustomControls;assembly=DevExpress.Xpf.ReportDesigner.CustomControls"
        xmlns:dxrud="http://schemas.devexpress.com/winfx/2008/xaml/reports/userdesigner"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid>
        <dxrud:ReportDesigner x:Name="reportDesigner"
                              Grid.Row="1"
                              customControl:CustomControl.SwissQRBillControlIsEnabled="True"
                              FieldListOptions="{dxrud:FieldListOptions Visibility=Closed}"
                              GroupAndSortPanelOptions="{dxrud:GroupAndSortOptionsPanel Visibility=Closed}"
                              ReportExplorerOptions="{dxrud:ReportExplorerOptions Visibility=Closed}"
                              ReportGalleryOptions="{dxrud:ReportGalleryOptions Visibility=Closed}"/>
    </Grid>
</Window>
